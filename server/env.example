# Google Cloud API Key (Translation v2 & Text-to-Speech v1 공통 사용)
GOOGLE_API_KEY=PUT_YOUR_KEY_HERE

# 앱 인증 토큰 (번역 및 TTS API 요청 시 X-App-Token 헤더로 전달)
APP_TOKEN=app-token-for-translate-secure

# 서버 포트
PORT=3000

# 월별 무료 사용량 한도 (문자 수 기준, 번역 + TTS 통합 quota)
FREE_TIER_LIMIT_CHARS=500000

# 사용량 차단 임계 비율 (98% 도달 시 자동 차단)
FREE_TIER_FREEZE_THRESHOLD_PCT=98

# SQLite 데이터베이스 파일 경로
SQLITE_PATH=/app/data/usage.sqlite
